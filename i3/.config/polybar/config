[module/powermenu]
type = custom/menu

format-spacing = 1

label-open = ÓÑå power
label-open-foreground = ${colors.secondary}
label-close = ÓÅ• cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[module/i3close]
type = custom/script
exec = echo test
label = "X"
click-left = i3-msg kill
click-right = i3-msg kill
click-middle = i3-msg "move container to output right"
scroll-up = i3-msg "scratchpad show"
scroll-down = i3-msg "scratchpad show"


[module/i3menu]
type = custom/menu

label-open = i3
label-separator = |
expand-right = false

menu-0-0 = "Kill Window"
menu-0-0-exec = i3-msg kill
menu-0-1 = "Other Monitor"
menu-0-1-exec = i3-msg "move container to output right; focus output right"
menu-0-2 = "Scratchpad"
menu-0-2-exec = i3-msg "scratchpad show"

scroll-up = i3-msg "scratchpad show"
scroll-down = i3-msg "scratchpad show"

